{
  // "editor.formatOnSave": true,  // 啟用儲存時格式化
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",  // 永遠觸發 ESLint 自動修正
    "source.fixAll.eslint": "explicit"
  },
  "editor.inlineSuggest.enabled": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],  // 驗證這些語言文件
}
